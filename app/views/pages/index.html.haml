.ajax-answer
:javascript
  $.ajax({
    url: '/api/v1/type_1.json',
    data: {
      id: 123
    },
    type: 'GET',
    success: function(json) {
      g_jqs.setCellValue(json.value, 1, 1);
      $('.row0.cell0').html(json.value);
      $('<h1/>').text(json.name).appendTo('.ajax-answer');
      //$('<div>').html(json.value).appendTo('.ajax-answer');
